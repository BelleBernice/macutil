<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MacUtilGUI.ViewModels"
        xmlns:models="using:MacUtilGUI.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="MacUtilGUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Border Background="#CCF5F7FA" Padding="24" BoxShadow="0 8 32 0 #0006">
    <Grid RowDefinitions="Auto,*,Auto" Margin="0">
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="MacUtil Script Runner" 
                   FontSize="40" 
                   FontWeight="Bold" 
                   FontFamily=".AppleSystemUIFont,Segoe UI,Helvetica Neue,Arial,sans-serif"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,36"
                   Foreground="#FF3B82F6"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="2*,3*" Margin="0,0,0,0">
            <!-- Left Panel - Script Categories -->
            <Border Grid.Column="0" Classes="sleek-glass" Margin="0,0,24,0" Background="#CC333333" CornerRadius="18" BoxShadow="0 2 12 0 #0003">
                <ScrollViewer>
                    <StackPanel Margin="18">
                        <TextBlock Text="Script Categories" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,18"/>

                        <TabControl ItemsSource="{Binding Categories}" Margin="0,0,0,0" >
                            <TabControl.ItemTemplate>
                                <DataTemplate x:DataType="models:ScriptCategory">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <DataTemplate x:DataType="models:ScriptCategory">
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{Binding Scripts}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="models:ScriptInfo">
                                                    <Button Content="{Binding Name}"
                                                            HorizontalAlignment="Stretch"
                                                            Margin="6,4"
                                                            Padding="14,8"
                                                            Click="OnScriptButtonClick"
                                                            Tag="{Binding}"
                                                            Background="#FFF0F4F8"
                                                            BorderThickness="0"
                                                            CornerRadius="8"
                                                            Foreground="#FF22272E"
                                                            FontWeight="Medium"
                                                            FontFamily=".AppleSystemUIFont,Segoe UI,Helvetica Neue,Arial,sans-serif"
                                                            HorizontalContentAlignment="Left"
                                                            Classes="sleek-accent"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Right Panel - Script Details and Output -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*" Margin="0">
                <!-- Script Details Section -->
                <Border Grid.Row="0" Classes="sleek-glass" Margin="0,0,0,18" Background="#CC333333" CornerRadius="18" BoxShadow="0 2 12 0 #0003">
                    <ScrollViewer Margin="18" MaxHeight="320">
                        <StackPanel>
                            <TextBlock Text="Script Details" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,18"/>
                            
                            <StackPanel IsVisible="{Binding CanRunScript}" Margin="0,0,0,8">
                                <TextBlock Text="{Binding SelectedScriptName}" 
                                           FontSize="22" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,12"/>
                                
                                <TextBlock Text="Description:" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedScriptDescription}" 
                                           TextWrapping="Wrap" 
                                           Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Category:" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedScriptCategory}" 
                                           Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Script File:" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedScriptFile}" 
                                           Margin="0,0,0,15"/>
                                
                                <Button Content="Run Script" 
                                        Command="{Binding RunScriptCommand}"
                                        IsEnabled="{Binding CanRunScript}"
                                        HorizontalAlignment="Left"
                                        Classes="sleek-accent"
                                        FontSize="16"
                                        Padding="24,10"
                                        CornerRadius="12"/>
                            </StackPanel>
                            
                            <TextBlock Text="Select a script from the left panel to view details and run it."
                                       IsVisible="{Binding !CanRunScript}"
                                       FontStyle="Italic"
                                       Foreground="#FF7B8794"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                
                <!-- Script Output Section -->
                <Border Grid.Row="1" Classes="sleek-glass" Margin="0,0,0,0" Background="#CC333333" CornerRadius="18" BoxShadow="0 2 12 0 #0003">
                    <Grid RowDefinitions="Auto,*" Margin="18">
                        <TextBlock Grid.Row="0"
                                   Text="Script Output" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,18"/>
                        
                        <ScrollViewer Grid.Row="1" Background="#FF181C20" Foreground="White">
                            <TextBlock Text="{Binding ScriptOutput}"
                                       FontFamily="JetBrains Mono,Menlo,Monaco,monospace"
                                       FontSize="15"
                                       TextWrapping="Wrap"
                                       Margin="12"
                                       Background="Transparent"
                                       Foreground="#FF3B82F6"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,36,0,0">
            <TextBlock Text="MacUtil GUI â€“ Powered by Hamsters" 
                       FontSize="14" 
                       Foreground="#FF3B82F6"/>
        </StackPanel>
    </Grid>
    </Border>
</Window>
